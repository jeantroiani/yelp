

<% if @restaurants.any? %>
	<% @restaurants.each do |restaurant| %>
	<h2><%= restaurant.name 	    %></h2>
	<h2><%= restaurant.cuisine      %></h2>
	<h2><%= restaurant.phone_number %></h2>
	<% end %>
	<% else %>
 		<h1>No restaurants have been added</h1>
<% end %>

<%= link_to 'New Restaurant', new_restaurant_path %>

